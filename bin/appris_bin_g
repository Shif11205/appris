#!/bin/bash

# -----------------------------------------------------------------------------
# Usage

USAGE="
\n
 APPRIS's binary for dev.\n
\n
 Name:\n
\t appris_bin\n
\n
 Description:\n
\t script that runs APPRIS scripts for a current gene.\n
\n
Required arguments:\n
\t-s {Species name}\n
\t\t Homo sapiens\n
\t\t Mus musculus\n
\t\t Rattus norvegicus\n
\t\t Danio rerio\n
\t\t Sus scrofa\n
\t\t Pan troglodytes\n
\t\t Drosophila melanogaster\n
\t\t Caenorhabditis elegans\n
\n
Optional arguments:\n
\t -i Path where input data is located\n
\n
\t -m {Methods which will execute. By default, all}\n
\t\t f -> firestar\n
\t\t m1 -> matador3d\n
\t\t m2 -> matador3d2\n
\t\t s -> spade\n
\t\t c -> corsair\n
\t\t ca -> corsair_alt\n
\t\t t -> thump\n
\t\t r -> crash\n
\t\t p -> proteo\n
\t\t a -> appris\n
\n
\t -d [-trifid]\n
\t\t TRIFID predictions file\n
\n
\t -l \n
\t\t info\n
\t\t debug\n
\n
\t -h \n
\n
Example:\n
\t\t appris_gbin -s 'Homo sapiens' -m fmscrp
\n
\n
 Author: Jose Manuel Rodriguez Carrasco -jmrodriguez@cnio.es- (INB-GN2,CNIO)\n
\n
"

# -----------------------------------------------------------------------------
# Get input parameters

INPATH="${PWD}"
LOG_LEVEL="info"

while expr "//$1" : //- >/dev/null
do
	case "$1" in
		-s )
			SPECIES=$2
			shift
			;;	
		-i )
			INPATH=$2
			shift
			;;
		-m )
			METHODS=$2
			shift
			;;
		-d | -trifid )
			TRIFID_PRED_FILE=$2
			shift
			;;
		-l )
			case "$2" in
				info | debug )
		        	LOG_LEVEL=$2
					;;
				* )
					echo Unknown loglevel: "$2" 
					echo -e $USAGE
					exit 1
					;;
			esac
			shift
			;;			
		-h | -help )
			echo -e $USAGE		
			exit
			;;
		* )
			echo Unknown option: "$1"
			echo -e $USAGE
			exit 1
			;;
	esac
	shift
done

if [ "${SPECIES}" == "" ]; then
	echo You must specify species name!
	echo -e $USAGE
	exit 1
fi

METHODS_PARAM=""
if [ "${METHODS}" != "" ]; then
	MET=""
	if [[ "${METHODS}" == *"f"* ]]; then
		MET="${MET},firestar"
	fi
	if [[ "${METHODS}" == *"m1"* ]]; then
		MET="${MET},matador3d"
	fi
	if [[ "${METHODS}" == *"m2"* ]]; then
		MET="${MET},matador3d2"
	fi
	if [[ "${METHODS}" == *"s"* ]]; then
		MET="${MET},spade"
	fi
	if [[ "${METHODS}" == *"c"* ]]; then
		MET="${MET},corsair"
	fi
	if [[ "${METHODS}" == *"ca"* ]]; then
		MET="${MET},corsair_alt"
	fi
	if [[ "${METHODS}" == *"t"* ]]; then
		MET="${MET},thump"
	fi
	if [[ "${METHODS}" == *"r"* ]]; then
		MET="${MET},crash"
	fi
	if [[ "${METHODS}" == *"p"* ]]; then
		MET="${MET},proteo"
	fi	
	if [[ "${METHODS}" == *"a"* ]]; then
		MET="${MET},appris"
	fi	
	METHODS_PARAM="${MET:1}"
else
	METHODS_PARAM="${APPRIS_METHODS}"
fi

TRIFID_PARAMETERS=""
if [ "${TRIFID_PRED_FILE}" != "" ]; then
	TRIFID_PARAMETERS=" --trifid=${TRIFID_PRED_FILE}"
fi


# -----------------------------------------------------------------------------
# Inputs data declarations
INDATA_PARAMETERS=""
if [[ -s "${INPATH}/annot.gtf" && -s "${INPATH}/transc.fa" && -s "${INPATH}/transl.fa" ]]; then
	INDATA_PARAMETERS=" --data=${INPATH}/annot.gtf"
	INDATA_PARAMETERS+=" --transc=${INPATH}/transc.fa"
	INDATA_PARAMETERS+=" --transl=${INPATH}/transl.fa"
	INDATA_PARAMETERS+=" --pdata=${INPATH}/pannot.gtf"
else
	if [ -s "${INPATH}/transl.fa" ]; then
		INDATA_PARAMETERS=" --transl=${INPATH}/transl.fa"
	else	
		echo Error within env variables: APPRIS required GENCODE | ENSEMBL | SEQUENCE data input!!
		exit 1
	fi
fi

# -----------------------------------------------------------------------------
# Run method

METHOD_SCRIPT="appris.pl"
SCRIPT="${APPRIS_CODE_DIR}/${METHOD_SCRIPT}"

# print trace
echo "================="
echo "perl ${SCRIPT} \\ "
echo " --species=\"${SPECIES}\" \\ "
echo "${INDATA_PARAMETERS}"
echo " --methods=${METHODS_PARAM} \\ "
echo " ${TRIFID_PARAMETERS} \\ "
echo " --outpath=${PWD} \\ "
echo " --loglevel=${LOG_LEVEL}\ "

# run method
perl ${SCRIPT} \
--species="${SPECIES}" \
${INDATA_PARAMETERS} \
--methods=${METHODS_PARAM} \
${TRIFID_PARAMETERS} \
--outpath=${PWD} \
--loglevel=${LOG_LEVEL}
echo "================="



